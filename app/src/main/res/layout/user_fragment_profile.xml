<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/activity_detail_discount"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shekamsalam"
                    android:scaleType="centerCrop"
                    android:tint="#11000000" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/s_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_recive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="60dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_recfile_userprofile"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:src="@drawable/recive" />

                    <TextView
                        android:id="@+id/tv_abou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recive"
                        android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_sendfile_userprofile"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:src="@drawable/send" />

                    <TextView
                        android:id="@+id/tv_feh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/send"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view_amoodi"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_below="@+id/img_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#000000" />

            <View
                android:id="@+id/view"
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:layout_below="@+id/view_amoodi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#000000" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit"
                    android:scaleType="fitEnd" />

                <TextView
                    android:id="@+id/tv_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="ویرایش اطلاعات واردشده"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit"
                    android:scaleType="fitEnd" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>