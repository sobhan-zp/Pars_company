            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Activity_Register" />
        <activity android:name=".Activity_Login" />
        <activity android:name=".Admin_fragment.activityReceive" />
        <activity android:name=".NextActivityFile" />
        <activity android:name=".user.User_mainActivity" />
        <activity android:name=".user.Edit_profile" />
        <activity android:name=".user.User_sendFile" />
        <activity android:name=".user.User_receive" />
        <activity android:name=".DetailActivity"
            android:theme="@style/AppTheme.ActionBar"/>
